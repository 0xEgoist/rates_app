<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency_flag_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ðŸ‡ªðŸ‡º" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="21dp"
        android:textColor="@color/colorShark"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/currency_flag_emoji"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PLN" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:textColor="@color/colorRegentGray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/currency_flag_emoji"
        app:layout_constraintTop_toBottomOf="@id/currency_ticker"
        tools:text="Polish Zloty" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/currency_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:focusable="true"
        android:inputType="numberDecimal"
        android:lineSpacingExtra="4sp"
        android:lines="1"
        android:maxLength="10"
        android:textSize="24sp"
        android:translationY="-1.94sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4.804252235223523" />
</androidx.constraintlayout.widget.ConstraintLayout>